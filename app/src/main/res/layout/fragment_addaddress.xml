<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:weightSum="10"
            android:gravity="center"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="7"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
               
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/postcode"
                    >

                    <com.google.android.material.textfield.TextInputEditText android:fontFamily="@font/arial"
                        android:id="@+id/et_postcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:inputType="text"
                        android:textSize="@dimen/font_text"
                        android:maxLines="1"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </FrameLayout>

            <Button android:fontFamily="@font/arial"
                android:id="@+id/btn_look_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="3"
                android:background="@color/black"
                android:text="Search"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
               
                >

                <com.weiwangcn.betterspinner.library.BetterSpinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    
                    android:hint="Choose Address" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:weightSum="10"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/address_title"
                    >

                    <com.google.android.material.textfield.TextInputEditText android:fontFamily="@font/arial"
                        android:id="@+id/et_address_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:inputType="textPostalAddress"
                        android:textSize="@dimen/font_text"
                        android:maxLines="1"
                        />
                </com.google.android.material.textfield.TextInputLayout>


                <TextView android:fontFamily="@font/arial"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Address Title"
                    android:paddingLeft="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_text"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="34dp"
                    android:layout_weight="6"
                    android:layout_gravity="center_vertical"
                    android:hint="@string/home"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_marginRight="8dp"
                    android:maxLines="1"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
               
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/address"
                    >

                    <com.google.android.material.textfield.TextInputEditText android:fontFamily="@font/arial"
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:inputType="textPostalAddress"
                        android:textSize="@dimen/font_text"
                        android:maxLines="1"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
               
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/address2"
                    >

                    <com.google.android.material.textfield.TextInputEditText android:fontFamily="@font/arial"
                        android:id="@+id/et_address2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:inputType="textPostalAddress"
                        android:textSize="@dimen/font_text"
                        android:maxLines="1"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
               
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/city"
                    >

                    <com.google.android.material.textfield.TextInputEditText android:fontFamily="@font/arial"
                        android:id="@+id/et_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:inputType="textPostalAddress"
                        android:textSize="@dimen/font_text"
                        android:maxLines="1"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
               
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/postcode"
                    >

                    <com.google.android.material.textfield.TextInputEditText android:fontFamily="@font/arial"
                        android:id="@+id/et_postcode_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:inputType="textPostalAddress"
                        android:textSize="@dimen/font_text"
                        android:maxLines="1"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </FrameLayout>
        </LinearLayout>

        <Button android:fontFamily="@font/arial"
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="3"
            android:background="@color/black"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"/>
    </LinearLayout>
</ScrollView>
