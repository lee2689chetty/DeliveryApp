<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/white" android:layout_width="match_parent" android:layout_height="220dp">
    <RelativeLayout android:id="@+id/custom_message_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:textStyle="bold" android:id="@+id/cancel_imageView" android:background="@drawable/ic_action_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="37dp"/>
    </RelativeLayout>
    <EditText android:textSize="15sp" android:textStyle="normal" android:textColorHint="#cecece" android:id="@+id/search_edit_text" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:hint="Search..." android:layout_below="@+id/custom_message_layout"/>

    <Button android:fontFamily="@font/arial"
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/search_edit_text"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/black"
        android:text="Search"
        android:textColor="@color/white" />
</RelativeLayout>
