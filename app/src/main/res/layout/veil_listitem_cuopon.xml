<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    >

    <TextView
        android:id="@+id/txt_top"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/skeleton_view"
        android:fontFamily="@font/arial"
        android:text="TextView"
        android:textColor="@color/bone_color"
        app:layout_constraintWidth_percent="0.3"
        android:layout_marginTop="10dp"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



    <TextView
        android:id="@+id/txt_card_owner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/skeleton_view"
        android:fontFamily="@font/arial"
        android:text="TextView"
        android:textColor="@color/bone_color"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toBottomOf="@+id/encrypt"
        android:layout_marginTop="10dp"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/encrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/skeleton_view"
        android:fontFamily="@font/arial"
        android:text="**** **** **** ****"
        android:textColor="@color/bone_color"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_top" />

    <LinearLayout
        android:id="@+id/ll_copy"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_card_owner"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rectangle_dash_line">

        <TextView android:fontFamily="@font/arial"
            android:id="@+id/txt_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="NEW4FREE"
            android:textColor="@color/bone_color"
            android:background="@color/bone_color"
            android:textSize="20dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>