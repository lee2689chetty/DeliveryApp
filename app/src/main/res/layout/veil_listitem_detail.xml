<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingBottom="3dp">

    <TextView
        android:id="@+id/txt_card_owner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/skeleton_view"
        android:fontFamily="@font/arial"
        android:text="TextView"
        android:textColor="@color/bone_color"
        android:layout_marginTop="10dp"
        android:textSize="10sp"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toBottomOf="@+id/encrypt2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/encrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/skeleton_view"
        android:fontFamily="@font/arial"
        android:text="**** **** **** ****"
        android:textColor="@color/bone_color"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/encrypt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/skeleton_view"
        android:fontFamily="@font/arial"
        android:text="**** **** **** ****"
        android:textColor="@color/bone_color"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/encrypt"
        />

</androidx.constraintlayout.widget.ConstraintLayout>